rules:
    braces:
        min-spaces-inside: 1
        max-spaces-inside: 1
    brackets:
        min-spaces-inside: 0
        max-spaces-inside: 0
    colons:
        max-spaces-before: 0
        max-spaces-after: 4
    commas:
        max-spaces-before: 0
        min-spaces-after: 1
        max-spaces-after: 1
    comments:
        level: error
        require-starting-space: yes
        min-spaces-from-content: 2
    comments-indentation:
        level: error
    document-end:
        level: error
        present: no
    document-start:
        level: error
        present: no
    empty-lines:
        max: 2
        max-start: 0
        max-end: 1
    hyphens:
        max-spaces-after: 1
    indentation:
        spaces: 4
        indent-sequences: yes
        check-multi-line-strings: yes
    key-duplicates: enable
    line-length:
        max: 80
        allow-non-breakable-words: yes
    new-line-at-end-of-file: enable
    new-lines:
        type: unix
    trailing-spaces: enable
